<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Hangman.MainPage"
             Shell.NavBarIsVisible="False">
    <Grid RowDefinitions="2*,4*,4*">
        
        <Image
            Grid.Row="0"
            Grid.RowSpan="3"
            Source="background.png"
            Aspect="AspectFill"
            HorizontalOptions="Center" />

        <Label
            Grid.Row="1"
            Text="WELCOME TO HANGMAN"
            FontFamily="Halloween"
            FontSize="50"
            TextColor="White"
            HorizontalOptions="Center"
            VerticalOptions="Start"
            HorizontalTextAlignment="Center"
            Margin="0, -30, 0, 0"/>

        <VerticalStackLayout 
            Grid.Row="2"
            HorizontalOptions="Center"
            VerticalOptions="Center"
            Spacing="20"
            Margin="0, -50, 0, 0">

            <Label
                Text="Select Category:"
                FontAttributes="Bold"
                TextColor="White"
                FontSize="18"
                HorizontalOptions="Center"
                Margin="0, 20, 0, 0"/>

            <Grid 
                RowDefinitions="Auto, Auto, Auto"
                ColumnDefinitions="*, *"
                ColumnSpacing="5"
                RowSpacing="10"
                HorizontalOptions="Center">

                <Button
                    Grid.Row="0"
                    Grid.Column="0"
                    Grid.ColumnSpan="2"
                    Text="HALLOWEEN"
                    BackgroundColor="#FF6B35"
                    TextColor="White"
                    FontSize="16"
                    FontFamily="Halloween"
                    WidthRequest="285"
                    HeightRequest="20"
                    CornerRadius="12"
                    Clicked="Category_Clicked"
                    CommandParameter="words"/>

                <Button
                    Grid.Row="1"
                    Grid.Column="0"
                    Text="ANIMALS"
                    BackgroundColor="#4ECDC4"
                    TextColor="White"
                    FontSize="16"
                    FontFamily="Halloween"
                    WidthRequest="140"
                    HeightRequest="20"
                    CornerRadius="12"
                    Clicked="Category_Clicked"
                    CommandParameter="animals"/>

                <!-- Row 2 -->
                <!-- Foods Button -->
                <Button
                    Grid.Row="1"
                    Grid.Column="1"
                    Text="FOODS"
                    BackgroundColor="#FFDB58"
                    TextColor="White"
                    FontSize="16"
                    FontFamily="Halloween"
                    WidthRequest="140"
                    HeightRequest="20"
                    CornerRadius="12"
                    Clicked="Category_Clicked"
                    CommandParameter="foods"/>

                <!-- Space Button -->
                <Button
                    Grid.Row="2"
                    Grid.Column="0"
                    Text="SPACE"
                    BackgroundColor="#6C5CE7"
                    TextColor="White"
                    FontSize="16"
                    FontFamily="Halloween"
                    WidthRequest="140"
                    HeightRequest="20"
                    CornerRadius="12"
                    Clicked="Category_Clicked"
                    CommandParameter="space"/>

                <Button
                    Grid.Row="2"
                    Grid.Column="1"
                    Text="TECHNOLOGY"
                    BackgroundColor="#00B894"
                    TextColor="White"
                    FontSize="16"
                    FontFamily="Halloween"
                    WidthRequest="140"
                    HeightRequest="20"
                    CornerRadius="12"
                    HorizontalOptions="Center"
                    Clicked="Category_Clicked"
                    CommandParameter="technology"/>
            </Grid>
        </VerticalStackLayout>
    </Grid>
</ContentPage>